{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"isolatedModules": true,
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": false,
		"allowImportingTsExtensions": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}